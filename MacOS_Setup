Brew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"

Cmake
brew install cmake

Boost
sudo chown -R $(whoami) /usr/local/lib/pkgconfig
brew install boost

